                            "DeletedAt": null,
                            "Enabled": true,
                            "IsBadge": true,
                            "Name": "Regular Badge",
                            "Description": "Standard Admission",
                            "Options": {
                                "name": "string"
                            },
                            "Prices": [
                                {
                                    "ID": "734b8efd-c8e8-436c-88cb-dfc2cb9fc535",
                                    "CreatedAt": "2018-10-26T17:41:46.014587-07:00",
                                    "UpdatedAt": "2018-10-26T17:41:46.014587-07:00",
